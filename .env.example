# AI旅行规划师生产环境配置
# 复制此文件为 .env 并根据实际情况修改

# 应用安全配置
SECRET_KEY=your-very-secure-production-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24小时

# 数据库配置
DATABASE_URL=sqlite:////app/data/app.db

# 应用环境配置
DEBUG=False
ENVIRONMENT=production

